{
    "compilerOptions": {
        "module": "ESNext",
        "lib": ["ESNext"],
        "target": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "preserveConstEnums": true,
        "declaration": true,
        "sourceMap": false,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noEmit": true
    },
    "include": ["src"]
}
